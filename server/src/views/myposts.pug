extends layout

block content
  script(type='module/javascript' src='/javascripts/main.bundle.js')
  div(class='main-container')
    div(class='left-main-container')
        div(class='create-post-container') Write article
    div(class='center-main-container')
        div(class='posts-maintitle') Posts

        if data.length > 0
            each item in data
                div(class='myposts-item-container') 

                    div(class='posts-title' onclick=`postClicked(${item.id})`) #{item.title}
                    div(class='posts-description' onclick=`postClicked(${item.id})`) #{item.description}
                    div(class='posts-info') #{item.updated_at}
                
        else
            div(class='myposts-item-container') 

                div(class='posts-title-no-pointer') No posts yet ...

        div(class='footer-myposts') End 

    div(class="divider-myposts")
    script.
        const postClicked = (id) => {
            window.location.href = `http://localhost:3000/editor?id=${id}`;
        }
                